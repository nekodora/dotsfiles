escape ^Tt 

# 現在の背景色で消去する
defbce "on"

# 太字には明るい色を使う
attrcolor b "^["

# 色表示設定
#term xterm-256color
term xterm-color 
#term xterm 

# スクロールバッファは最大10000行
defscrollback 10000

# 別画面サポート。Vimやless使うときに便利
altscreen on

# ビジュアルベル（画面全体が点滅する）を切る
vbell off

# ベルの時はメッセージ（＋音）を出す
bell_msg "Bell in window %^G"

# 端末が落ちたら自動的にデタッチする
autodetach on

# ログファイルのファイル名
#logfile "$HOME/screenlog/screen-%Y%m%d-%n.log"

# 標準でログをとるon とらないoff
deflog off

# ウィンドウのタイトル指定
shelltitle '$ |bash'

# メッセージを表示する時間(秒単位)
msgwait 5

# 次のメッセージを表示するまでの遅延時間(秒単位)
msgminwait 1

# 画面の一番下の行を反転させてハードステータス表示
# 背景緑 文字白
hardstatus alwayslastline "%{= gY}[%m/%d %02c:%s] %{gW} %-w%{= wk}%n %t%{-}%+w"
# teraterm Eterm風設定用
#hardstatus alwayslastline "%{= dG}[%m/%d %02c:%s] %{dY} %-w%{=b dC}%n %t%{-}%+w"

# 文字コード切替
bind ^U encoding utf8
bind ^E encoding euc
